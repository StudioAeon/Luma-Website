<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Maintenance mode - uncomment to enable
    RewriteCond %{REQUEST_URI} !^/maintenance\.html$
    RewriteRule ^(.*)$ /maintenance.html [L,R=503]

    # Normal SPA routing (comment out when in maintenance)
